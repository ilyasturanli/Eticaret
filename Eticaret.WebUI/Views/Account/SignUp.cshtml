@model AppUser
@{
    ViewData["Title"] = "Üye Ol";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/SignIn/SignInPage.css" asp-append-version="true" />
</head>
<body>
    <main class="form-signin w-100 m-auto">
        <form id="signupForm" asp-action="SignUp" asp-controller="Account" method="post">
            <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
            
            <div class="text-center mb-4">
                <div class="login-icon">
                    <i class="fas fa-user-plus" style="font-size: 4rem; color: #667eea;"></i>
                </div>
            </div>

            <h1 class="h3 mb-3 fw-normal">Kayıt Ol</h1>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Lütfen aşağıdaki hataları düzeltin
            </div>

            <!-- Ad ve Soyad -->
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" id="firstNameInput" placeholder="Ad" required>
                <label for="firstNameInput">Ad</label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Surname" type="text" class="form-control" id="lastNameInput" placeholder="Soyad" required>
                <label for="lastNameInput">Soyad</label>
                <span asp-validation-for="Surname" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
                <label for="floatingEmail">Email</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Telefon -->
            <div class="form-floating">
                <input asp-for="Phone" type="tel" class="form-control" id="floatingPhone" placeholder="Telefon" required>
                <label for="floatingPhone">Telefon</label>
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <!-- Şifre -->
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre" required>
                <label for="floatingPassword">Şifre</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
                <button type="button" class="password-toggle" id="togglePassword">
                    <i class="fas fa-eye"></i>
                </button>
            </div>

            <!-- şifre tekrar -->
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingConfirmPassword" placeholder="şifre tekrar" required>
                <label for="floatingConfirmPassword">şifre tekrar</label>
                <span id="passwordConfirmError" class="text-danger small" style="display: none;"></span>
                <button type="button" class="password-toggle" id="toggleConfirmPassword">
                    <i class="fas fa-eye"></i>
                </button>
            </div>

             <!-- Kullanım Şartları Checkbox -->
             
            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                <label class="form-check-label" for="termsCheck">
                    Kullanım Şartlarını kabul ediyorum
                </label>
            </div> 

            <button id="submitBtn" class="btn btn-primary w-100 py-2" type="submit">
                <span class="btn-text">Kayıt Ol</span>
            </button>

            <p class="mt-5 mb-3 text-body-secondary">© 2024-2025</p>
        </form>
    </main>
    <script src="~/js/SignUp/SignUpPage.js" asp-append-version="true"></script>
</body>
