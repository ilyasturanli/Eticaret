@model UserEditViewModel

@{
    ViewData["Title"] = "Hesabımı Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <form asp-action="Index" method="post">
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <!-- Sol Sütun: Kişisel Bilgiler -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-user me-2"></i>
                                            Kişisel Bilgiler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label fw-bold">
                                                <i class="fas fa-user me-1"></i>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </label>
                                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Adını girin..." />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label asp-for="Surname" class="form-label fw-bold">
                                                <i class="fas fa-user me-1"></i>
                                                @Html.DisplayNameFor(model => model.Surname)
                                            </label>
                                            <input asp-for="Surname" class="form-control form-control-lg" placeholder="Soyadını girin..." />
                                            <span asp-validation-for="Surname" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label asp-for="Phone" class="form-label fw-bold">
                                                <i class="fas fa-phone me-1"></i>
                                                @Html.DisplayNameFor(model => model.Phone)
                                            </label>
                                            <input asp-for="Phone" class="form-control" placeholder="Telefon numarası girin..." />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sağ Sütun: Hesap Bilgileri -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-key me-2"></i>
                                            Hesap Bilgileri
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Email" class="form-label fw-bold">
                                                <i class="fas fa-envelope me-1"></i>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </label>
                                            <input asp-for="Email" class="form-control" type="email" placeholder="E-posta adresini girin..." readonly/>
                                            <input type="hidden" asp-for="Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label asp-for="Password" class="form-label fw-bold">
                                                <i class="fas fa-lock me-1"></i>
                                                @Html.DisplayNameFor(model => model.Password)
                                            </label>
                                            <input asp-for="Password" class="form-control" type="password" placeholder="Yeni şifre girin..." />

                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Şifreyi değiştirmek istemiyorsanız boş bırakın
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Alt Sütun: Yetki Ayarları -->
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-end align-items-center">
@*                             <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Listeye Dön
                            </a> *@
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        @if (TempData["SuccessMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    timer: 5000, // 5 saniye
                    timerProgressBar: true,
                    didClose: () => {
                        window.location.href = '@Url.Action("Index", "Home")';
                    },
                    allowOutsideClick: false
                });
            </script>
        }
    }
}
