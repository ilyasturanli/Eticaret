
@model HomePageViewModel
@{
    ViewData["Title"] = "Anasayfa";
}
<partial name="_Slider" model="Model.Sliders" />

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4 fw-bold text-dark">Kaliteli Araba Parçaları</h2>
            <p class="text-center text-muted mb-5">En uygun fiyatlarla, en kaliteli araba parçalarını sizlere sunuyoruz. Güvenilir markalar, hızlı teslimat!</p>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        @foreach(var item in Model.Products)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                <partial name="_ProductView" model="item" />
            </div>
        }
    </div>
</div>
@if(Model.News.Count > 0)
{
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-4 fw-bold text-dark">Özel Kampanyalar</h2>
                <p class="text-center text-muted mb-5">Fırsatları kaçırmayın! Sınırlı süre için özel indirimler ve kampanyalar</p>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model.News)
            {
                @if (item.IsActive)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <partial name="_NewsView" model="item" />
                    </div>
                }
            }
        </div>
    </div>
}


