@model ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Product.Name;
}
<section class="py-1">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"> 
                <img class="card-img-top mb-5 mb-md-0" src="~/Img/Products/@Model.Product.Image" alt="@Model.Product.Name"> 
                </div>
            <div class="col-md-6">
                <div class="small mb-1">OEM: @Model.Product.ProductCode</div>
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                <div class="fs-5 mb-5">
                    @* <span class="text-decoration-line-through">$45.00</span> *@
                    <span>@Model.Product.Price.ToString("c")</span>
                </div>
                <p class="lead">@Model.Product.Description</p>
                <div class="d-flex">
                    <form asp-action="Add" asp-controller="Cart" class="d-flex">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id"/>
                        <input class="form-control text-center me-3" name="quantity" id="inputQuantity" type="number" value="1" style="max-width: 4rem">
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-cart me-1"></i>
                            Sepete Ekle
                        </button>
                    </form>
                    <form asp-action="Add" asp-controller="Favorites" class="d-flex ms-3">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-heart me-1"></i>
                            Favoriye Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Related items section -->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">İlişkili Ürünler</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">            
            @foreach(var item in Model.RelatedProducts)
            {
                <div class="col">
                    <partial name="_ProductView" model="item" />
                </div>
            }
        </div>
    </div>
</section>



