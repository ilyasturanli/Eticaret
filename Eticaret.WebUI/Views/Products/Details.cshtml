@section Scripts {
    <script>
        // Sepete ekle butonuna tıklandığında
        document.addEventListener('DOMContentLoaded', function() {
            const addToCartForm = document.querySelector('form[asp-action="Add"][asp-controller="Cart"]');
            if (addToCartForm) {
                addToCartForm.addEventListener('submit', function(e) {
                    // Form submit edildikten sonra sepet sayısını güncelle
                    setTimeout(function() {
                        updateCartCount();
                    }, 500);
                });
            }
        });
    </script>
}