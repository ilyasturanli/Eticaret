@model News

@{
    ViewData["Title"] = Model.Name;
}

<div class="container my-5 news-details">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Img/News/@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">@Model.Name</h1>
            <div class="mb-4">
                @Model.Description
            </div>
        </div>
    </div>
</div>