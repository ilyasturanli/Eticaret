@model CartViewModel
@{
    ViewData["Title"] = "Sepetim";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-center mb-5">
                <i class="bi bi-cart3 text-primary me-3"></i>Alışveriş Sepetim
            </h1>
        </div>
    </div>

    @if (!Model.CartLines.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-cart-x display-1 text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Sepetiniz Boş</h3>
                        <p class="text-muted mb-4">Sepetinizde henüz ürün bulunmamaktadır. Alışverişe başlamak için ürünlerimizi keşfedin.</p>
                        <a href="/Products" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Alışverişe Başla
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-bag me-2 text-primary"></i>Sepetinizdeki Ürünler (@Model.CartLines.Count ürün)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.CartLines)
                        {
                            <div class="cart-item border-bottom p-4">
                                <div class="row align-items-center">
                                    <!-- Product Image -->
                                    <div class="col-md-2 col-3">
                                        <a href="/Products/Details/@item.Product.Id" class="text-decoration-none">
                                            <img src="/Img/Products/@item.Product.Image" 
                                                 alt="@item.Product.Name" 
                                                 class="img-fluid rounded shadow-sm" 
                                                 style="max-height: 80px; object-fit: cover;">
                                        </a>
                                    </div>
                                    
                                    <!-- Product Info -->
                                    <div class="col-md-4 col-6">
                                        <a href="/Products/Details/@item.Product.Id" class="text-decoration-none">
                                            <h6 class="fw-bold text-dark mb-1">@item.Product.Name</h6>
                                        </a>
                                        <small class="text-muted">Ürün Kodu: @item.Product.ProductCode</small>
                                    </div>
                                    
                                    <!-- Quantity Controls -->
                                    <div class="col-md-3 col-6">
                                        <div class="d-flex align-items-center">
                                            <form asp-action="Update" asp-controller="Cart" method="post" class="d-flex align-items-center">
                                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                                <button type="submit" name="quantity" value="@(item.Quantity - 1)" 
                                                        class="btn btn-outline-secondary btn-sm" 
                                                        @(item.Quantity <= 1 ? "disabled" : "")
                                                        onclick="return confirm('Miktarı azaltmak istediğinizden emin misiniz?')">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <span class="mx-3 fw-bold">@item.Quantity</span>
                                                <button type="submit" name="quantity" value="@(item.Quantity + 1)" 
                                                        class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    
                                    <!-- Price -->
                                    <div class="col-md-2 col-6">
                                        <div class="text-end">
                                            <div class="fw-bold text-primary fs-5">@item.Product.Price.ToString("c")</div>
                                            <small class="text-muted">Birim Fiyat</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Remove Button -->
                                    <div class="col-md-1 col-6">
                                        <form asp-action="Remove" asp-controller="Cart" method="post" class="text-end">
                                            <input type="hidden" name="productId" value="@item.Product.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                    onclick="return confirm('Bu ürünü sepetten kaldırmak istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Cart Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-calculator me-2"></i>Sipariş Özeti
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ürün Sayısı:</span>
                            <span class="fw-bold">@Model.CartLines.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Toplam Miktar:</span>
                            <span class="fw-bold">@Model.CartLines.Sum(x => x.Quantity)</span>
                        </div>
                        <hr>
                        @{
                            
                            decimal kdvHaricTutar = Model.TotalPrice / 1.20m; // KDV hariç tutar
                            decimal kdvtutarı = Model.TotalPrice - kdvHaricTutar; // KDV tutarı
                            decimal cargoücreti = Model.TotalPrice >= 10000 ? 0 : 450;
                            decimal geneltoplam = Model.TotalPrice + cargoücreti; // KDV zaten dahil
                        }
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ara Toplam (KDV Hariç):</span>
                            <span class="fw-bold">@kdvHaricTutar.ToString("c")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Kargo Bedeli:</span>
                            @if (cargoücreti == 0)
                            {
                                <span class="fw-bold text-success">
                                    <i class="bi bi-check-circle me-1"></i>Ücretsiz
                                </span>
                            }
                            else
                            {
                                <span class="fw-bold">@cargoücreti.ToString("c")</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">KDV (%20):</span>
                            <span class="fw-bold">@kdvtutarı.ToString("c")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ara Toplam (KDV Dahil):</span>
                            <span class="fw-bold">@Model.TotalPrice.ToString("c")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fs-5 fw-bold">Genel Toplam:</span>
                            <span class="fs-4 fw-bold text-primary">@geneltoplam.ToString("c")</span>
                        </div>
                        
                        <div class="d-grid gap-2">
                                        <button class="btn btn-primary btn-lg" type="button" onclick="location.href='@Url.Action("Checkout","Cart")'">
                <i class="bi bi-credit-card me-2"></i>Ödemeye Geç
            </button>
                            <a href="/Products" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Alışverişe Devam Et
                            </a>
                        </div>
                        
                        <div class="mt-3 p-3 bg-light rounded">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Ücretsiz kargo için minimum sepet tutarı: 10.000₺
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Empty Cart Button -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <form asp-action="Clear" asp-controller="Cart" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-outline-danger" 
                            onclick="return confirm('Sepetinizi tamamen temizlemek istediğinizden emin misiniz?')">
                        <i class="bi bi-trash me-2"></i>Sepeti Temizle
                    </button>
                </form>
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
}


