@{
    ViewData["Title"] = "Ödeme Başarısız";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center py-5">
                    <i class="bi bi-x-circle display-1 text-danger mb-4"></i>
                    <h2 class="text-danger mb-3">Ödeme Başarısız</h2>
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Hata Detayı:</strong><br>
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">Ödeme işlemi sırasında bir hata oluştu. Lütfen tekrar deneyiniz.</p>
                    }
                    
                    <div class="d-grid gap-2 d-md-block">
                        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary btn-lg me-md-2">
                            <i class="bi bi-arrow-left me-2"></i>Tekrar Dene
                        </a>
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-cart me-2"></i>Sepete Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
