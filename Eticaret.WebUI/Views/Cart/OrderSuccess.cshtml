@model Eticaret.Core.Entities.Order
@using Eticaret.Core.Helpers

@{
    ViewData["Title"] = "Sipariş Başarılı";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <!-- Başarı İkonu -->
                    <div class="mb-4">
                        <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                            <i class="fas fa-check text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>

                    <!-- Başlık -->
                    <h1 class="text-success mb-3">
                        <i class="fas fa-shopping-bag me-3"></i>
                        Siparişiniz Alındı!
                    </h1>

                    <!-- Teşekkür Mesajı -->
                    <p class="lead text-muted mb-4">
                        Siparişiniz başarıyla oluşturuldu. Sipariş numaranız: 
                        <strong class="text-primary">@Model.OrderNumber</strong>
                    </p>

                    <!-- Sipariş Özeti -->
                    <div class="row justify-content-center mb-5">
                        <div class="col-md-8">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title text-primary mb-3">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Sipariş Özeti
                                    </h5>
                                    <div class="row text-start">
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Sipariş Tarihi:</strong><br>
                                                <span class="text-muted">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                                            </p>
                                            <p class="mb-2">
                                                <strong>Toplam Tutar:</strong><br>
                                                <span class="text-success fw-bold fs-5">@Model.TotalPrice.ToString("c")</span>
                                            </p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Sipariş Durumu:</strong><br>
                                                <span class="badge bg-warning text-dark">@Model.OrderState.GetDisplayName()</span>
                                            </p>
                                            <p class="mb-2">
                                                <strong>Teslimat Adresi:</strong><br>
                                                <small class="text-muted">@Model.DeliveryAddress</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bilgilendirme Mesajı -->
                    <div class="alert alert-info" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-envelope me-2"></i>
                            E-posta Bildirimi
                        </h6>
                        <p class="mb-0">
                            Sipariş detayları ve takip bilgileri e-posta adresinize gönderilecektir.
                        </p>
                    </div>

                    <!-- Butonlar -->
                    <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-5">
                        <a asp-controller="Account" asp-action="MyOrders" class="btn btn-primary btn-lg">
                            <i class="fas fa-list me-2"></i>
                            Sipariş Takip
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Alışverişe Devam Et
                        </a>
                    </div>

                    <!-- Ek Bilgiler -->
                    <div class="mt-5 pt-4 border-top">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-truck text-primary mb-2" style="font-size: 2rem;"></i>
                                    <h6>Hızlı Teslimat</h6>
                                    <small class="text-muted">1-3 iş günü içinde</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-shield-alt text-success mb-2" style="font-size: 2rem;"></i>
                                    <h6>Güvenli Ödeme</h6>
                                    <small class="text-muted">SSL korumalı</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-headset text-info mb-2" style="font-size: 2rem;"></i>
                                    <h6>7/24 Destek</h6>
                                    <small class="text-muted">Her zaman yanınızdayız</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }
    
    .btn {
        border-radius: 0.75rem;
        font-weight: 500;
        padding: 0.75rem 2rem;
    }
    
    .btn-lg {
        font-size: 1.1rem;
    }
    
    .alert {
        border-radius: 0.75rem;
        border: none;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .bg-success.rounded-circle {
        box-shadow: 0 0.5rem 1rem rgba(40, 167, 69, 0.3);
    }
</style>
