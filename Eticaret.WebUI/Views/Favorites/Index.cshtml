@model List<Product>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-center mb-5">
                <i class="bi bi-heart-fill text-danger me-3"></i>Favori Ürünlerim
            </h1>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-heart display-1 text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Favori Ürününüz Yok</h3>
                        <p class="text-muted mb-4">Henüz favori ürününüz bulunmamaktadır. Beğendiğiniz ürünleri favorilere ekleyerek buradan takip edebilirsiniz.</p>
                        <a href="/Products" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Ürünleri Keşfet
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Favori Ürünler -->
            <div class="col-lg-9">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-heart me-2 text-danger"></i>Favori Ürünleriniz (@Model.Count ürün)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model)
                        {
                            <div class="favorite-item border-bottom p-4">
                                <div class="row align-items-center">
                                    <!-- Product Image -->
                                    <div class="col-md-2 col-3">
                                        <a href="/Products/Details/@item.Id" class="text-decoration-none">
                                            <img src="/Img/Products/@item.Image" 
                                                 alt="@item.Name" 
                                                 class="img-fluid rounded shadow-sm" 
                                                 style="max-height: 80px; object-fit: cover;">
                                        </a>
                                    </div>
                                    
                                    <!-- Product Info -->
                                    <div class="col-md-4 col-6">
                                        <a href="/Products/Details/@item.Id" class="text-decoration-none">
                                            <h6 class="fw-bold text-dark mb-1">@item.Name</h6>
                                        </a>
                                        <small class="text-muted">Ürün Kodu: @item.ProductCode</small>
                                    </div>
                                    
                                    <!-- Price -->
                                    <div class="col-md-2 col-6">
                                        <div class="text-end">
                                            <div class="fw-bold text-primary fs-5">@item.Price.ToString("c")</div>
                                            <small class="text-muted">Birim Fiyat</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Actions -->
                                    <div class="col-md-4 col-6">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <!-- Add to Cart Button -->
                                            <form asp-action="Add" asp-controller="Cart" method="post" class="d-inline">
                                                <input type="hidden" name="ProductId" value="@item.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-primary btn-sm" title="Sepete Ekle">
                                                    <i class="bi bi-cart-plus me-1"></i>Sepete Ekle
                                                </button>
                                            </form>
                                            
                                            <!-- Remove from Favorites Button -->
                                            <form asp-action="Remove" asp-controller="Favorites" method="post" class="d-inline">
                                                <input type="hidden" name="ProductId" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                        onclick="return confirm('Bu ürünü favorilerden kaldırmak istediğinizden emin misiniz?')"
                                                        title="Favorilerden Kaldır">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Summary Card -->
            <div class="col-lg-3">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-danger text-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-heart me-2"></i>Favori Özeti
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Toplam Ürün:</span>
                            <span class="fw-bold">@Model.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Toplam Değer:</span>
                            <span class="fs-5 fw-bold text-primary">@Model.Sum(x => x.Price).ToString("c")</span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a href="/Products" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>Alışverişe Devam Et
                            </a>
                            <a href="/Cart" class="btn btn-primary">
                                <i class="bi bi-cart me-2"></i>Sepetimi Görüntüle
                            </a>
                        </div>
                        
                        <div class="mt-3 p-3 bg-light rounded">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Favori ürünlerinizi sepete ekleyerek alışverişe devam edebilirsiniz.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Clear All Favorites Button -->
        @* <div class="row mt-4">
            <div class="col-12 text-center">
                <form asp-action="Clear" asp-controller="Favorites" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-outline-danger" 
                            onclick="return confirm('Tüm favori ürünlerinizi kaldırmak istediğinizden emin misiniz?')">
                        <i class="bi bi-trash me-2"></i>Tüm Favorileri Temizle
                    </button>
                </form>
            </div>
        </div> *@
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/favorites.css" asp-append-version="true" />
}