@model Adress

@{
    ViewData["Title"] = "Adres Sil";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash me-2"></i>
                        Adres Silme Onayı
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu adresi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.Title)</label>
                                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Title)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.BillingType)</label>
                                <p class="form-control-plaintext">@Html.DisplayFor(model => model.BillingType)</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.City)</label>
                                <p class="form-control-plaintext">@Html.DisplayFor(model => model.City)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.District)</label>
                                <p class="form-control-plaintext">@Html.DisplayFor(model => model.District)</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.OpenAdress)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.OpenAdress)</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CompanyName) || !string.IsNullOrEmpty(Model.TaxNumber) || !string.IsNullOrEmpty(Model.TaxOffice))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Kurumsal Bilgiler</label>
                            <div class="border rounded p-3 bg-light">
                                <div class="row g-2">
                                    @if (!string.IsNullOrEmpty(Model.CompanyName))
                                    {
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.CompanyName)</small>
                                            <span class="fw-medium">@Html.DisplayFor(model => model.CompanyName)</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.TaxNumber))
                                    {
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.TaxNumber)</small>
                                            <span class="fw-medium">@Html.DisplayFor(model => model.TaxNumber)</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.TaxOffice))
                                    {
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.TaxOffice)</small>
                                            <span class="fw-medium">@Html.DisplayFor(model => model.TaxOffice)</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.IsActive)</label>
                                <p class="mb-0">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.IsBillingAdress)</label>
                                <p class="mb-0">
                                    @if (Model.IsBillingAdress)
                                    {
                                        <span class="badge bg-primary">Fatura Adresi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Değil</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(model => model.IsDeliveryAdress)</label>
                                <p class="mb-0">
                                    @if (Model.IsDeliveryAdress)
                                    {
                                        <span class="badge bg-info">Teslimat Adresi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Değil</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bu adresi silmek istediğinizden emin misiniz?')">
                                <i class="fas fa-trash me-1"></i>
                                Adresi Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }
    
    .card-header {
        border-radius: 8px 8px 0 0 !important;
    }
    
    .form-control-plaintext {
        padding: 0.375rem 0;
        border: none;
        background: transparent;
    }
    
    .badge {
        font-size: 0.75em;
        padding: 0.35em 0.65em;
    }
    
    .alert {
        border-radius: 6px;
    }
    
    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
    }
    
    .fw-medium {
        font-weight: 500;
    }
</style>
