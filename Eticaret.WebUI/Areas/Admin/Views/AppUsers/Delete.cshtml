@model AppUser

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>
                        Kullanıcı Sil
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">Bu kullanıcıyı kalıcı olarak silmek istediğinizden emin misiniz?</p>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Kullanıcı ve tüm ilgili veriler kalıcı olarak silinecektir.
                    </div>
                    
                    <div class="row">
                        <!-- Sol Sütun: Kullanıcı Bilgileri -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user me-1"></i>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.Name)</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user me-1"></i>
                                            @Html.DisplayNameFor(model => model.Surname)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.Surname)</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-at me-1"></i>
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-primary">@Html.DisplayFor(model => model.UserName)</span>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-envelope me-1"></i>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <a href="mailto:@Model.Email" class="text-primary">
                                                <i class="fas fa-envelope me-1"></i>
                                                @Html.DisplayFor(model => model.Email)
                                            </a>
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-phone me-1"></i>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.Phone))
                                            {
                                                <a href="tel:@Model.Phone" class="text-primary">
                                                    <i class="fas fa-phone me-1"></i>
                                                    @Html.DisplayFor(model => model.Phone)
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Telefon yok</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-toggle-on me-1"></i>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user-shield me-1"></i>
                                            @Html.DisplayNameFor(model => model.IsAdmin)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsAdmin)
                                            {
                                                <span class="badge bg-warning">Yönetici</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kullanıcı</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-calendar me-1"></i>
                                            @Html.DisplayNameFor(model => model.CreateDate)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Html.DisplayFor(model => model.CreateDate)</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sağ Sütun: Kullanıcı Avatar -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">
                                        <i class="fas fa-user-circle me-1"></i>
                                        Kullanıcı Profili
                                    </h5>
                                </div>
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                                    </div>
                                    <h6 class="card-title">@Model.Name @Model.Surname</h6>
                                    <p class="text-muted">@Model.UserName</p>
                                    <div class="mt-2">
                                        @if (Model.IsAdmin)
                                        {
                                            <span class="badge bg-warning">Yönetici</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Kullanıcı</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash-alt me-2"></i>
                            Kullanıcıyı Kalıcı Olarak Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
