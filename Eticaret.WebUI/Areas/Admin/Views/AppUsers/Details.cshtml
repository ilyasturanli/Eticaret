@model AppUser

@{
    ViewData["Title"] = "";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user me-2"></i>
                        Kullanıcı Detayları
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Sol Sütun: Kullanıcı Bilgileri -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user me-1"></i>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong class="fs-5">@Html.DisplayFor(model => model.Name)</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user me-1"></i>
                                            @Html.DisplayNameFor(model => model.Surname)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong class="fs-5">@Html.DisplayFor(model => model.Surname)</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-envelope me-1"></i>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <a href="mailto:@Model.Email" class="text-primary">
                                                <i class="fas fa-envelope me-1"></i>
                                                @Html.DisplayFor(model => model.Email)
                                            </a>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-phone me-1"></i>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.Phone))
                                            {
                                                <a href="tel:@Model.Phone" class="text-primary">
                                                    <i class="fas fa-phone me-1"></i>
                                                    @Html.DisplayFor(model => model.Phone)
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Telefon yok</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-user-tag me-1"></i>
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.UserName))
                                            {
                                                <span class="badge bg-primary">@Html.DisplayFor(model => model.UserName)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Kullanıcı adı yok</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-toggle-on me-1"></i>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-shield-alt me-1"></i>
                                            @Html.DisplayNameFor(model => model.IsAdmin)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsAdmin)
                                            {
                                                <span class="badge bg-warning">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kullanıcı</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-calendar me-1"></i>
                                            @Html.DisplayNameFor(model => model.CreateDate)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <small class="text-muted">@Model.CreateDate.ToString("dd.MM.yyyy HH:mm")</small>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            
                            <!-- GUID Bilgisi -->
                            <div class="mt-4">
                                <h5 class="card-title">
                                    <i class="fas fa-key me-1"></i>
                                    @Html.DisplayNameFor(model => model.UserGuid)
                                </h5>
                                <div class="card">
                                    <div class="card-body">
                                        <code class="text-muted">@Model.UserGuid</code>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sağ Sütun: Kullanıcı Avatar -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">
                                        <i class="fas fa-user-circle me-1"></i>
                                        Kullanıcı Profili
                                    </h5>
                                </div>
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-user-circle fa-6x text-primary"></i>
                                    </div>
                                    <h5>@Model.Name @Model.Surname</h5>
                                    <p class="text-muted">
                                        @if (Model.IsAdmin)
                                        {
                                            <span class="badge bg-warning">Yönetici</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Kullanıcı</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Listeye Dön
                        </a>
                        <div>
                            <a class="btn btn-outline-success me-2" asp-action="Edit" asp-route-id="@Model?.Id">
                                <i class="fas fa-edit me-1"></i>
                                Düzenle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
