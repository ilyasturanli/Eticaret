@model AppUser

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Kullanıcı Düzenle
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">@Model.Name @Model.Surname kullanıcısının bilgilerini güncelleyin</p>
                </div>
                
                <form asp-action="Edit">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserGuid" />
                        <input type="hidden" asp-for="CreateDate" />
                        <input type="hidden" id="passwordField" name="Password" value="@Model.Password" />
                        
                        <div class="row">
                            <!-- Sol Sütun: Kişisel Bilgiler -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-user me-2"></i>
                                            Kişisel Bilgiler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label fw-bold">
                                                <i class="fas fa-user me-1"></i>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </label>
                                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Adını girin..." />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Surname" class="form-label fw-bold">
                                                <i class="fas fa-user me-1"></i>
                                                @Html.DisplayNameFor(model => model.Surname)
                                            </label>
                                            <input asp-for="Surname" class="form-control form-control-lg" placeholder="Soyadını girin..." />
                                            <span asp-validation-for="Surname" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Phone" class="form-label fw-bold">
                                                <i class="fas fa-phone me-1"></i>
                                                @Html.DisplayNameFor(model => model.Phone)
                                            </label>
                                            <input asp-for="Phone" class="form-control" placeholder="Telefon numarasını girin..." />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sağ Sütun: Hesap Bilgileri -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-key me-2"></i>
                                            Hesap Bilgileri
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="UserName" class="form-label fw-bold">
                                                <i class="fas fa-at me-1"></i>
                                                @Html.DisplayNameFor(model => model.UserName)
                                            </label>
                                            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adını girin..." />
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Email" class="form-label fw-bold">
                                                <i class="fas fa-envelope me-1"></i>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </label>
                                            <input asp-for="Email" class="form-control" type="email" placeholder="E-posta adresini girin..." />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-lock me-1"></i>
                                                Şifre Değiştir
                                            </label>
                                            <input type="password" class="form-control" id="newPassword" placeholder="Şifreyi değiştirmek için yeni şifre girin..." />
                                            
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Şifreyi değiştirmek istemiyorsanız boş bırakın
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Alt Sütun: Yetki Ayarları -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-shield-alt me-2"></i>
                                            Yetki Ayarları
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-toggle-on me-1"></i>
                                                Kullanıcı Durumu
                                            </label>
                                            <div class="form-check form-switch mb-3">
                                                <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActive" />
                                                <label class="form-check-label fw-bold" for="isActive">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    @Html.DisplayNameFor(model => model.IsActive)
                                                </label>
                                            </div>
                                            
                                            <div class="form-check form-switch mb-3">
                                                <input class="form-check-input" type="checkbox" asp-for="IsAdmin" id="isAdmin" />
                                                <label class="form-check-label fw-bold" for="isAdmin">
                                                    <i class="fas fa-user-shield me-1"></i>
                                                    @Html.DisplayNameFor(model => model.IsAdmin)
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Form submit'i debug edelim
            $('form').on('submit', function(e) {
                console.log('Form submitting...');
                
                // Yeni şifre alanını hidden field'a kopyala
                var newPassword = $('#newPassword').val();
                if (newPassword && newPassword.trim() !== '') {
                    $('#passwordField').val(newPassword);
                    console.log('Password updated:', newPassword);
                } else {
                    // Eğer yeni şifre girilmemişse, mevcut şifreyi koru
                    var currentPassword = '@Html.Raw(Model.Password)';
                    $('#passwordField').val(currentPassword);
                    console.log('Keeping current password:', currentPassword);
                }
                
                // Form verilerini log'la
                var formData = $(this).serialize();
                console.log('Form data:', formData);
                
                // Checkbox değerlerini kontrol et
                var isActive = $('#isActive').is(':checked');
                var isAdmin = $('#isAdmin').is(':checked');
                
                console.log('IsActive:', isActive);
                console.log('IsAdmin:', isAdmin);
                
                // Validation summary'yi kontrol et
                checkValidationSummary();
            });
            
            // Checkbox değişikliklerini log'la
            $('#isActive, #isAdmin').on('change', function() {
                var isChecked = $(this).is(':checked');
                var fieldName = $(this).attr('id');
                console.log(fieldName + ' changed to:', isChecked);
            });
            
            // Sayfa yüklendiğinde checkbox değerlerini log'la
            console.log('Page loaded - IsActive:', $('#isActive').is(':checked'));
            console.log('Page loaded - IsAdmin:', $('#isAdmin').is(':checked'));
            
            // Validation summary kontrolü
            function checkValidationSummary() {
                var hasErrors = $('.field-validation-error').length > 0 || 
                               $('.input-validation-error').length > 0 || 
                               $('.text-danger').length > 0;
                
                if (hasErrors) {
                    $('.alert-danger').show();
                } else {
                    $('.alert-danger').hide();
                }
            }
            
            // Sayfa yüklendiğinde validation summary'yi kontrol et
            checkValidationSummary();
            
            // Input değişikliklerinde validation summary'yi kontrol et
            $('input').on('input', function() {
                setTimeout(checkValidationSummary, 100);
            });
            
            // Checkbox değişikliklerinde validation summary'yi kontrol et
            $('input[type="checkbox"]').on('change', function() {
                setTimeout(checkValidationSummary, 100);
            });
        });
    </script>
}
