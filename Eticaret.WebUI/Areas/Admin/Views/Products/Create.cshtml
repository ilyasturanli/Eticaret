@model Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Yeni Ürün Ekle
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">Yeni ürün bilgilerini girerek sisteme ekleyin</p>
                </div>
                
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        
                        <div class="row">
                            <!-- Sol Sütun: Temel Bilgiler -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Temel Bilgiler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label fw-bold">
                                                <i class="fas fa-tag me-1"></i>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </label>
                                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ürün adını girin..." />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="ProductCode" class="form-label fw-bold">
                                                <i class="fas fa-barcode me-1"></i>
                                                @Html.DisplayNameFor(model => model.ProductCode)
                                            </label>
                                            <input asp-for="ProductCode" class="form-control" placeholder="Ürün kodunu girin..." />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Description" class="form-label fw-bold">
                                                <i class="fas fa-align-left me-1"></i>
                                                @Html.DisplayNameFor(model => model.Description)
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ürün açıklamasını girin..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sağ Sütun: Detay Bilgiler -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-cogs me-2"></i>
                                            Detay Bilgiler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label asp-for="Price" class="form-label fw-bold">
                                                        <i class="fas fa-money-bill me-1"></i>
                                                        @Html.DisplayNameFor(model => model.Price)
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-text">₺</span>
                                                        <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label asp-for="Stock" class="form-label fw-bold">
                                                        <i class="fas fa-boxes me-1"></i>
                                                        @Html.DisplayNameFor(model => model.Stock)
                                                    </label>
                                                    <input asp-for="Stock" class="form-control" placeholder="0" type="number" min="0" />
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                                        <i class="fas fa-folder me-1"></i>
                                                        @Html.DisplayNameFor(model => model.CategoryId)
                                                    </label>
                                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                                        <option value="">Kategori seçin...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label asp-for="BrandId" class="form-label fw-bold">
                                                        <i class="fas fa-copyright me-1"></i>
                                                        @Html.DisplayNameFor(model => model.BrandId)
                                                    </label>
                                                    <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId">
                                                        <option value="">Marka seçin...</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="OrderNo" class="form-label fw-bold">
                                                <i class="fas fa-sort-numeric-up me-1"></i>
                                                @Html.DisplayNameFor(model => model.OrderNo)
                                            </label>
                                            <input asp-for="OrderNo" class="form-control" placeholder="0" type="number" min="0" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Alt Sütun: Resim ve Seçenekler -->
                        <div class="row mt-4">
                            <div class="col-md-8">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-image me-2"></i>
                                            Ürün Görseli
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Image" class="form-label fw-bold">
                                                <i class="fas fa-upload me-1"></i>
                                                @Html.DisplayNameFor(model => model.Image)
                                            </label>
                                            <input name="Image" class="form-control" type="file" accept="image/*" />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Desteklenen formatlar: JPG, PNG, GIF. Maksimum boyut: 5MB
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-toggle-on me-2"></i>
                                            Ürün Ayarları
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActive" />
                                            <label class="form-check-label fw-bold" for="isActive">
                                                <i class="fas fa-check-circle me-1"></i>
                                                @Html.DisplayNameFor(model => model.IsActive)
                                            </label>
                                        </div>
                                        
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" asp-for="IsHome" id="isHome" />
                                            <label class="form-check-label fw-bold" for="isHome">
                                                <i class="fas fa-home me-1"></i>
                                                @Html.DisplayNameFor(model => model.IsHome)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Ürünü Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form validation için ek JavaScript
        $(document).ready(function() {
            // File input için preview (opsiyonel)
            $('input[type="file"]').change(function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $(this).next('.form-text').html('<i class="fas fa-check-circle me-1 text-success"></i> Seçilen dosya: ' + fileName);
                }
            });
        });
    </script>
}

