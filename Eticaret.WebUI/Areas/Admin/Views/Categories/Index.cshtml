@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<style>
    .category-image {
        max-width: 100px;
        max-height: 60px;
        object-fit: contain; /* Resmi bozmadan sığdırır */
    }
    td, th {
        vertical-align: middle !important; /* Hücreleri dikey ortala */
    }
    .action-buttons {
        white-space: nowrap; /* Butonlar alt satıra geçmesin */
        width: 120px; /* Sabit genişlik */
    }
</style>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i>Yeni Ekle</i>
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTopMenu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="/Img/Categories/@item.Image" alt="" class="category-image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTopMenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @item.CreateDate.ToString()    
            </td>
            <td>
                <div class="text-end">
                    <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-user-pen"></i></a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Detaylar"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
