@model Eticaret.Core.Entities.Contact

@{
    ViewData["Title"] = "İletişim Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-trash-alt me-2"></i>
                        İletişim Silme Onayı
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">
                        Bu kullanıcıyı kalıcı olarak silmek istediğinizden emin misiniz?
                    </p>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Kullanıcı ve tüm ilgili veriler kalıcı olarak silinecektir.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-user me-1"></i>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-user me-1"></i>
                                    @Html.DisplayNameFor(model => model.Surname)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Surname)
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Html.DisplayNameFor(model => model.Email)
                                </dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-phone me-1"></i>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Telefon yok</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar me-1"></i>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </dt>
                                <dd class="col-sm-8">
                                    @Model.CreateDate.ToString("dd.MM.yyyy HH:mm")
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-danger">
                                <div class="card-header bg-light">
                                    <h5 class="card-title text-danger">
                                        <i class="fas fa-comment me-1"></i>
                                        @Html.DisplayNameFor(model => model.Message)
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@Html.DisplayFor(model => model.Message)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Listeye Dön
                    </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i>
                            Kullanıcıyı Kalıcı Olarak Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
