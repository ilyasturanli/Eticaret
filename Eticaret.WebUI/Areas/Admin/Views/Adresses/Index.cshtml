@model IEnumerable<Adress>

@{
    ViewData["Title"] = "Kullanıcı Adresleri";
}

<style>
    .address-table {
        table-layout: fixed;
    }
    
    .address-table th,
    .address-table td {
        vertical-align: middle;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
    
    .address-table .col-title {
        width: 8%;
    }
    
    .address-table .col-city {
        width: 8%;
    }
    
    .address-table .col-district {
        width: 8%;
    }
    
    .address-table .col-address {
        width: 20%;
    }
    
    .address-table .col-status {
        width: 6%;
        text-align: center;
    }
    
    .address-table .col-user {
        width: 15%;
    }
    
    .address-table .col-actions {
        width: 15%;
        min-width: 140px;
    }
    
    .btn-actions {
        white-space: nowrap;
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }
    
    .btn-actions .btn {
        flex-shrink: 0;
        min-width: 35px;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i>Yeni Ekle</i>
    </a>
</p>
<table class="table address-table">
    <thead>
        <tr>
            <th class="col-title">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="col-city">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="col-district">
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th class="col-address">
                @Html.DisplayNameFor(model => model.OpenAdress)
            </th>
            <th class="col-status">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="col-status">
                @Html.DisplayNameFor(model => model.IsBillingAdress)
            </th>
            <th class="col-status">
                @Html.DisplayNameFor(model => model.IsDeliveryAdress)
            </th>
            <th class="col-user">
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th class="col-actions"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-title">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="col-city">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td class="col-district">
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td class="col-address">
                @Html.DisplayFor(modelItem => item.OpenAdress)
            </td>
            <td class="col-status">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="col-status">
                @Html.DisplayFor(modelItem => item.IsBillingAdress)
            </td>
            <td class="col-status">
                @Html.DisplayFor(modelItem => item.IsDeliveryAdress)
            </td>
            <td class="col-user">
                @Html.DisplayFor(modelItem => item.AppUser.Email)
            </td>
            <td class="col-actions">
                <div class="btn-actions">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Düzenle"><i class="fa-solid fa-user-pen"></i></a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Detaylar"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Sil"><i class="fa-solid fa-trash"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
