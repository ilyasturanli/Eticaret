@model News

@{
    ViewData["Title"] = "Yeni Duyuru Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-newspaper me-2"></i>
                        Yeni Duyuru Ekle
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">Yeni duyuru bilgilerini girerek sisteme ekleyin</p>
                </div>
                
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        
                        <div class="row">
                            <!-- Sol Sütun: Duyuru Bilgileri -->
                            <div class="col-md-8">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Duyuru Bilgileri
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label fw-bold">
                                                <i class="fas fa-heading me-1"></i>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </label>
                                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Duyuru başlığını girin..." />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Description" class="form-label fw-bold">
                                                <i class="fas fa-align-left me-1"></i>
                                                @Html.DisplayNameFor(model => model.Description)
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Duyuru detaylarını girin..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sağ Sütun: Resim ve Ayarlar -->
                            <div class="col-md-4">
                                <div class="card border-0 bg-light mb-3">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-image me-2"></i>
                                            Duyuru Görseli
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Image" class="form-label fw-bold">
                                                <i class="fas fa-upload me-1"></i>
                                                @Html.DisplayNameFor(model => model.Image)
                                            </label>
                                            <input name="Image" class="form-control" type="file" accept="image/*" />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Desteklenen formatlar: JPG, PNG, GIF
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-toggle-on me-2"></i>
                                            Duyuru Ayarları
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActive" />
                                            <label class="form-check-label fw-bold" for="isActive">
                                                <i class="fas fa-check-circle me-1"></i>
                                                @Html.DisplayNameFor(model => model.IsActive)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Duyuruyu Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            $('input[type="file"]').change(function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $(this).next('.form-text').html('<i class="fas fa-check-circle me-1 text-success"></i> Seçilen dosya: ' + fileName);
                }
            });
        });
    </script>
}

