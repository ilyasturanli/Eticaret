@model IEnumerable<Order>
@using Eticaret.Core.Entities
@using Eticaret.Core.Helpers

@{
    ViewData["Title"] = "Siparişler";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Yeni Sipariş
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-shopping-cart display-1 text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Henüz Sipariş Yok</h3>
                        <p class="text-muted mb-4">Henüz hiç sipariş bulunmamaktadır.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-list me-2 text-primary"></i>Sipariş Listesi
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <i class="fas fa-hashtag me-1"></i>
                                    @Html.DisplayNameFor(model => model.OrderNumber)
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-money-bill me-1"></i>
                                    @Html.DisplayNameFor(model => model.TotalPrice)
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-user me-1"></i>
                                    Müşteri ID
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-envelope me-1"></i>
                                    Müşteri Email
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-calendar me-1"></i>
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-calendar me-1"></i>
                                    @Html.DisplayNameFor(model => model.OrderState)
                                </th>
                                <th class="border-0 text-end">
                                    <i class="fas fa-cogs me-1"></i>
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold text-primary">@item.OrderNumber</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">@item.TotalPrice.ToString("c")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.AppUserId</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            <i class="fas fa-envelope me-1"></i>
                                            @(item.AppUser.Email)
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @item.OrderDate.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge @(item.OrderState switch {
                                            EnumOrderState.Waiting => "bg-warning",
                                            EnumOrderState.Approved => "bg-info",
                                            EnumOrderState.Shipped => "bg-primary",
                                            EnumOrderState.Completed => "bg-success",
                                            EnumOrderState.Cancelled => "bg-danger",
                                            _ => "bg-secondary"
                                        })">
                                            <i class="fas fa-circle me-1"></i>
                                            @item.OrderState.GetDisplayName()
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .table th {
        font-weight: 600;
        color: #495057;
        border-top: none;
    }
    
    .table td {
        vertical-align: middle;
        border-top: 1px solid #f8f9fa;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
    
    .btn-group .btn {
        border-radius: 0.375rem;
        margin: 0 1px;
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.5rem 0.75rem;
    }
    
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
</style>
