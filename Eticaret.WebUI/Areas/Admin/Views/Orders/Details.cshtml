@model Eticaret.Core.Entities.Order

@{
    ViewData["Title"] = "Sipariş Detayları";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-eye text-primary me-2"></i>
                    Sipariş Detayları
                </h2>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Sipariş Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-hashtag me-2"></i>Sipariş Numarası
                                </label>
                                <div class="form-control-plaintext fw-bold text-primary fs-5">
                                    @Model.OrderNumber
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-money-bill me-2"></i>Toplam Tutar
                                </label>
                                <div class="form-control-plaintext fw-bold text-success fs-5">
                                    @Model.TotalPrice.ToString("c")
                                </div>
                            </div>
                        </div>
                    </div>
                    
                                         <div class="row">
                         <div class="col-md-6">
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-user me-2"></i>Müşteri ID
                                 </label>
                                 <div class="form-control-plaintext">
                                     <span class="badge bg-info">@Model.AppUserId</span>
                                 </div>
                             </div>
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-calendar me-2"></i>Sipariş Tarihi
                                 </label>
                                 <div class="form-control-plaintext">
                                     <i class="fas fa-clock me-1 text-muted"></i>
                                     @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-user me-2"></i>Müşteri Bilgileri
                                 </label>
                                 <div class="form-control-plaintext">
                                     <div class="d-flex flex-column gap-1">
                                         <div>
                                             <i class="fas fa-user me-1 text-muted"></i>
                                             <span class="fw-bold">@Model.AppUser.Name @Model.AppUser.Surname</span>
                                         </div>
                                         <div>
                                             <i class="fas fa-envelope me-1 text-muted"></i>
                                             <span class="text-primary">@Model.AppUser.Email</span>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                </div>
            </div>
        </div>

                 <div class="col-lg-4">
             <div class="card border-0 shadow-sm">
                 <div class="card-header bg-info text-white border-0 py-3">
                     <h5 class="mb-0 fw-bold">
                         <i class="fas fa-map-marker-alt me-2"></i>
                         Adres Bilgileri
                     </h5>
                 </div>
                 <div class="card-body">
                     <div class="mb-3">
                         <label class="form-label fw-bold text-muted">
                             <i class="fas fa-file-invoice me-2"></i>Fatura Adresi
                         </label>
                         <div class="form-control-plaintext">
                             <small class="text-muted">@Model.BillingAddress</small>
                         </div>
                     </div>
                     
                     <div class="mb-3">
                         <label class="form-label fw-bold text-muted">
                             <i class="fas fa-truck me-2"></i>Teslimat Adresi
                         </label>
                         <div class="form-control-plaintext">
                             <small class="text-muted">@Model.DeliveryAddress</small>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>

     @if (Model.OrderLines != null && Model.OrderLines.Any())
     {
         <div class="row mt-4">
             <div class="col-12">
                 <div class="card border-0 shadow-sm">
                     <div class="card-header bg-success text-white border-0 py-3">
                         <h5 class="mb-0 fw-bold">
                             <i class="fas fa-shopping-bag me-2"></i>
                             Sipariş Edilen Ürünler
                         </h5>
                     </div>
                     <div class="card-body p-0">
                         <div class="table-responsive">
                             <table class="table table-hover mb-0">
                                 <thead class="table-light">
                                     <tr>
                                         <th class="border-0">
                                             <i class="fas fa-image me-2"></i>Ürün Görseli
                                         </th>
                                         <th class="border-0">
                                             <i class="fas fa-box me-2"></i>Ürün Adı
                                         </th>
                                         <th class="border-0 text-center">
                                             <i class="fas fa-hashtag me-2"></i>Adet
                                         </th>
                                         <th class="border-0 text-end">
                                             <i class="fas fa-tag me-2"></i>Birim Fiyat
                                         </th>
                                         <th class="border-0 text-end">
                                             <i class="fas fa-calculator me-2"></i>Toplam
                                         </th>
                                     </tr>
                                 </thead>
                                 <tbody>
                                     @foreach (var orderLine in Model.OrderLines)
                                     {
                                         <tr>
                                               <td class="align-middle">
                                                  @if (!string.IsNullOrEmpty(orderLine.Product?.Image))
                                                  {
                                                      <img src="@Url.Content($"~/Img/Products/{orderLine.Product.Image}")" 
                                                           alt="@orderLine.Product?.Name" 
                                                           class="img-thumbnail" 
                                                           style="width: 50px; height: 50px; object-fit: cover;"
                                                           onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                                  }
                                                  else
                                                  {
                                                      <div class="bg-light d-flex align-items-center justify-content-center" 
                                                           style="width: 50px; height: 50px;">
                                                          <i class="fas fa-image text-muted"></i>
                                                      </div>
                                                                                                     }
                                               </td>
                                             <td class="align-middle">
                                                 <div>
                                                     <strong class="text-primary">@orderLine.Product?.Name</strong>
                                                     @if (!string.IsNullOrEmpty(orderLine.Product?.Brand?.Name))
                                                     {
                                                         <br><small class="text-muted">@orderLine.Product.Brand.Name</small>
                                                     }
                                                 </div>
                                             </td>
                                             <td class="align-middle text-center">
                                                 <span class="badge bg-primary fs-6">@orderLine.Quantity</span>
                                             </td>
                                             <td class="align-middle text-end">
                                                 <span class="text-success fw-bold">@orderLine.UnitPrice.ToString("c")</span>
                                             </td>
                                             <td class="align-middle text-end">
                                                 <span class="text-primary fw-bold fs-6">@((orderLine.Quantity * orderLine.UnitPrice).ToString("c"))</span>
                                             </td>
                                         </tr>
                                     }
                                 </tbody>
                                 <tfoot class="table-light">
                                     <tr>
                                         <td colspan="4" class="text-end fw-bold">
                                             <i class="fas fa-money-bill-wave me-2"></i>Genel Toplam:
                                         </td>
                                         <td class="text-end">
                                             <span class="text-success fw-bold fs-5">@Model.TotalPrice.ToString("c")</span>
                                         </td>
                                     </tr>
                                 </tfoot>
                             </table>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     }

    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .form-control-plaintext {
        padding: 0.75rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        border: 1px solid #e9ecef;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .btn-group .btn {
        border-radius: 0.5rem;
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table td {
        vertical-align: middle;
        border-top: 1px solid #e9ecef;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }
    
    .img-thumbnail {
        border-radius: 0.5rem;
    }
    
    .table-light {
        background-color: #f8f9fa;
    }
</style>
