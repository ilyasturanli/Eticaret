@model Eticaret.Core.Entities.Order

@{
    ViewData["Title"] = "Sipariş Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-trash text-danger me-2"></i>
                    Sipariş Sil
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Sipariş Silme Onayı
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Dikkat!
                        </h6>
                        <p class="mb-0">
                            Bu siparişi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-hashtag me-2"></i>Sipariş Numarası
                                </label>
                                <div class="form-control-plaintext fw-bold text-primary">
                                    @Model.OrderNumber
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-money-bill me-2"></i>Toplam Tutar
                                </label>
                                <div class="form-control-plaintext fw-bold text-success">
                                    @Model.TotalPrice.ToString("c")
                                </div>
                            </div>
                        </div>
                    </div>

                                         <div class="row">
                         <div class="col-md-6">
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-user me-2"></i>Müşteri ID
                                 </label>
                                 <div class="form-control-plaintext">
                                     <span class="badge bg-info">@Model.AppUserId</span>
                                 </div>
                             </div>
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-calendar me-2"></i>Sipariş Tarihi
                                 </label>
                                 <div class="form-control-plaintext">
                                     <i class="fas fa-clock me-1 text-muted"></i>
                                     @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="mb-3">
                                 <label class="form-label fw-bold text-muted">
                                     <i class="fas fa-user me-2"></i>Müşteri Bilgileri
                                 </label>
                                 <div class="form-control-plaintext">
                                     <div class="d-flex flex-column gap-1">
                                         <div>
                                             <i class="fas fa-user me-1 text-muted"></i>
                                             <span class="fw-bold">@Model.AppUser?.Name @Model.AppUser?.Surname</span>
                                         </div>
                                         <div>
                                             <i class="fas fa-envelope me-1 text-muted"></i>
                                             <span class="text-primary">@Model.AppUser?.Email</span>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">
                            <i class="fas fa-file-invoice me-2"></i>Fatura Adresi
                        </label>
                        <div class="form-control-plaintext">
                            <small class="text-muted">@Model.BillingAddress</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-muted">
                            <i class="fas fa-truck me-2"></i>Teslimat Adresi
                        </label>
                        <div class="form-control-plaintext">
                            <small class="text-muted">@Model.DeliveryAddress</small>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Siparişi Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .form-control-plaintext {
        padding: 0.75rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        border: 1px solid #e9ecef;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .btn {
        border-radius: 0.5rem;
        font-weight: 500;
    }
    
    .alert {
        border-radius: 0.5rem;
    }
</style>
