@model Slider

@{
    ViewData["Title"] = "Slider Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>
                        Slider Sil
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">Bu slider'ı kalıcı olarak silmek istediğinizden emin misiniz?</p>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Slider ve tüm ilgili veriler kalıcı olarak silinecektir.
                    </div>
                    
                    <div class="row">
                        <!-- Sol Sütun: Slider Bilgileri -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-heading me-1"></i>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.Title)</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-4">
                                            <i class="fas fa-link me-1"></i>
                                            @Html.DisplayNameFor(model => model.Link)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.Link))
                                            {
                                                <a href="@Model.Link" target="_blank" class="text-primary">
                                                    <i class="fas fa-external-link-alt me-1"></i>
                                                    @Model.Link
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Link yok</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            
                            <!-- Açıklama -->
                            <div class="mt-4">
                                <h5 class="card-title">
                                    <i class="fas fa-align-left me-1"></i>
                                    @Html.DisplayNameFor(model => model.Description)
                                </h5>
                                <div class="card">
                                    <div class="card-body">
                                        <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sağ Sütun: Slider Görseli -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">
                                        <i class="fas fa-image me-1"></i>
                                        Slider Görseli
                                    </h5>
                                </div>
                                <div class="card-body text-center">
                                    @if (!string.IsNullOrEmpty(Model.Image))
                                    {
                                        <img src="/Img/Sliders/@Model.Image" 
                                             alt="@Model.Title" 
                                             class="img-fluid rounded shadow-sm" 
                                             style="max-height: 300px; max-width: 100%; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <div class="text-muted">
                                            <i class="fas fa-image fa-3x mb-2"></i>
                                            <p>Görsel bulunamadı</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash-alt me-2"></i>
                            Slider'ı Kalıcı Olarak Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
