@model Slider

@{
    ViewData["Title"] = "";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-images me-2"></i>
                        Yeni Slider Ekle
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">Yeni slider bilgilerini girerek sisteme ekleyin</p>
                </div>
                
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        
                        <div class="row">
                            <!-- Sol Sütun: Slider Bilgileri -->
                            <div class="col-md-8">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Slider Bilgileri
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Title" class="form-label fw-bold">
                                                @Html.DisplayNameFor(model => model.Title)
                                            </label>
                                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Slider başlığını girin..." />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Description" class="form-label fw-bold">
                                                <i class="fas fa-align-left me-1"></i>
                                                @Html.DisplayNameFor(model => model.Description)
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Slider açıklamasını girin..."></textarea>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Link" class="form-label fw-bold">
                                                <i class="fas fa-link me-1"></i>
                                                @Html.DisplayNameFor(model => model.Link)
                                            </label>
                                            <input asp-for="Link" class="form-control" placeholder="https://example.com" type="url" />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Slider'a tıklandığında gidilecek link (opsiyonel)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sağ Sütun: Resim -->
                            <div class="col-md-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-image me-2"></i>
                                            Slider Görseli
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Image" class="form-label fw-bold">
                                                <i class="fas fa-upload me-1"></i>
                                                @Html.DisplayNameFor(model => model.Image)
                                            </label>
                                            <input name="Image" class="form-control" type="file" accept="image/*" required />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Desteklenen formatlar: JPG, PNG, GIF<br>
                                                <i class="fas fa-exclamation-triangle me-1 text-warning"></i>
                                                Slider için yüksek kaliteli resim önerilir
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                @* <i class="fas fa-arrow-left me-2"></i> *@
                                Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                @* <i class="fas fa-save me-2"></i> *@
                                Slider'ı Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            $('input[type="file"]').change(function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $(this).next('.form-text').html('<i class="fas fa-check-circle me-1 text-success"></i> Seçilen dosya: ' + fileName);
                }
            });
        });
    </script>
}

