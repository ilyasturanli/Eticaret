@model Slider

@{
    ViewData["Title"] = "Slider Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Slider Düzenle
                    </h3>
                    <p class="mb-0 mt-1 opacity-75">@Model.Title slider'ının bilgilerini güncelleyin</p>
                </div>
                
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lütfen aşağıdaki hataları düzeltin
                        </div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />
                        
                        <div class="row">
                            <!-- Sol Sütun: Temel Bilgiler -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Temel Bilgiler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label asp-for="Title" class="form-label fw-bold">
                                                <i class="fas fa-heading me-1"></i>
                                                @Html.DisplayNameFor(model => model.Title)
                                            </label>
                                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Slider başlığını girin..." />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Description" class="form-label fw-bold">
                                                <i class="fas fa-align-left me-1"></i>
                                                @Html.DisplayNameFor(model => model.Description)
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Slider açıklamasını girin..."></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="Link" class="form-label fw-bold">
                                                <i class="fas fa-link me-1"></i>
                                                @Html.DisplayNameFor(model => model.Link)
                                            </label>
                                            <input asp-for="Link" class="form-control" placeholder="https://..." />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Slider'a tıklandığında yönlendirilecek link
                                            </div>
                                            <span asp-validation-for="Link" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sağ Sütun: Görsel -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-header bg-transparent">
                                        <h5 class="card-title text-primary mb-0">
                                            <i class="fas fa-image me-2"></i>
                                            Slider Görseli
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-upload me-1"></i>
                                                Yeni Görsel Seç
                                            </label>
                                            <input name="Image" class="form-control" type="file" accept="image/*" />
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Desteklenen formatlar: JPG, PNG, GIF. Maksimum boyut: 5MB
                                            </div>
                                        </div>
                                        
                                        @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image))
                                        {
                                            <div class="form-group mb-3">
                                                <label class="form-label fw-bold">
                                                    <i class="fas fa-image me-1"></i>
                                                    Mevcut Görsel
                                                </label>
                                                <div class="card border p-3">
                                                    <div class="text-center">
                                                        <img src="/Img/Sliders/@Model.Image" 
                                                             alt="@Model.Title" 
                                                             class="img-fluid rounded shadow-sm mb-3" 
                                                             style="max-height: 200px; max-width: 100%; object-fit: contain;" />
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="cbResimSil" id="cbResimSil" />
                                                            <label class="form-check-label text-danger fw-bold" for="cbResimSil">
                                                                <i class="fas fa-trash me-1"></i>
                                                                Bu görseli sil
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form validation için ek JavaScript
        $(document).ready(function() {
            // File input için preview (opsiyonel)
            $('input[type="file"]').change(function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $(this).next('.form-text').html('<i class="fas fa-check-circle me-1 text-success"></i> Seçilen dosya: ' + fileName);
                }
            });
        });
    </script>
}
